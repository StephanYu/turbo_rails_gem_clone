<%= turbo_frame_tag article do %>
  <p>
    Article <%= "##{article.id}" %>
    <strong>Content:</strong>
    <%= article.content %>
    <%= link_to "Edit", edit_article_path(article) %>
    <%= button_to "Delete", article_path(article), method: :delete, form: { style: "display: inline;" } %>
  </p>
<% end %>
